{
  "name": "@hebcal/hdate",
  "version": "0.11.1",
  "description": "converts between Hebrew and Gregorian dates using Rata Die (R.D.) algorithm by Dershowitz and Reingold",
  "author": "Michael J. Radwin (https://github.com/mjradwin)",
  "contributors": [
    "Eyal Schachter (https://github.com/Scimonster)",
    "Danny Sadinoff (https://github.com/dsadinoff)"
  ],
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hebcal/hdate-js.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "hebcal",
    "hebrew",
    "calendar",
    "date"
  ],
  "files": [
    "dist/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "npm run po2json && npm run build:es6 && npm run build:cjs && npm run build:types",
    "build:cjs": "tsc -p ./tsconfig-cjs.json",
    "build:es6": "tsc -p ./tsconfig-es6.json",
    "build:types": "tsc -p ./tsconfig-types.json",
    "po2json": "node ./po2json.cjs po/*.po",
    "docs": "typedoc",
    "clean": "gts clean",
    "compile": "tsc",
    "coverage": "jest --coverage",
    "fix": "gts fix",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "lint": "gts lint"
  },
  "overrides": {
    "babel-plugin-ttag@1.8.16": {
      "babel-plugin-macros": "3.1.0"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.9",
    "gts": "^5.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ttag-cli": "^1.10.12",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.3"
  }
}
